<?xml version="1.0" encoding="utf-8"?>
<project name="romio" default="install" basedir=".">

    <property name="import.dir" value="${basedir}/../antlib/resources"/>
    <import file="${import.dir}/global.xml"/>
    <import file="${import.dir}/dependencies.xml"/>
    <import file="${import.dir}/lifecycle.xml"/>
    <import file="${import.dir}/hibernate.xml"/>

    <target name="test" description="Unzips test dependencies and then calls lifecycle.test">
        <unjar src="${target.dir}/libs/testing.jar" dest="${classes.dir}">
            <patternset>
                <include name="tiny*dv"/>
            </patternset>
        </unjar>
        <antcall target="lifecycle.test" inheritAll="true" inheritRefs="true"/>
    </target>

</project>
